<resources>
  <style name="ZendeskCustomToolbarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Primary colors -->
    <item name="colorPrimary">#E79024</item>
    <item name="colorPrimaryDark">#E79024</item>
    <item name="colorAccent">#007300</item>

    <!-- Text colors -->
    <item name="android:textColorPrimary">#FFFFFF</item>

    <!-- Toolbar styles -->
    <item name="android:windowActionBar">true</item>
    <item name="android:windowNoTitle">false</item>

    <!-- Fix for edge-to-edge + status bar overlap -->
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:statusBarColor">#E79024</item> <!-- Optional: solid color -->
  </style>
</resources>